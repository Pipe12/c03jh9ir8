<div class="jumbotron">
	<h1 class="jumbotron-fluid text-center display-3">Actores</h1>
</div>
<div class="col-sm-8 col-sm-offset-2">
	<h1>Crear actor</h1>
	<%= form_for @actor do |f| %>
		<div class="form-group">
			<%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del actor" %>
		</div>
		<div class="form-group">
			<%= f.date_field :birth_date, class: "form-control input-lg", placeholder: "YYYYMMDD" %>
		</div>
		<div class="form-group">
			<%= f.text_field :birth_place, class: "form-control input-lg", placeholder: "Ingresa el lugar de nacimiento" %>
		</div>
		<div class="form-group">
			<%= f.text_area :bio, class: "form-control input-lg", placeholder: "Ingresa la biografia del actor" %>
		</div>
		<div class="form-group">
			<%= f.text_field :image_url, class: "form-control input-lg", placeholder: "Ingresa imagen del actor" %>
		</div>
		<div class="form-group">
			<%= label_tag(:alive, "Esta vivo el actor ?") %>
			<%= f.check_box :alive %>
		</div>
		<div class="form-group">
			<%= f.date_field :death_date, class: "form-control input-lg", placeholder: "YYYYMMDD" %>
		</div>
		<div class="form-group">
			<%= f.text_field :death_place, class: "form-control input-lg", placeholder: "Ingresa el lugar de muerte" %>
		</div>
		<div class="actions text-right">
		  <%= f.submit "Crea actor", class: "btn btn-primary" %>
		</div>
	<% end %>
</div>